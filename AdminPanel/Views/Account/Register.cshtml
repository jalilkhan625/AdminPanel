@model AdminPanel.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css" />
<link rel="stylesheet" href="~/css/toast.css" />

@if (TempData["RegistrationSuccess"] != null)
{
    <div id="registration-success" style="display:none">@TempData["RegistrationSuccess"]</div>
}

<div class="register-container">
    <h2 class="text-center mb-4">Create Account</h2>

    <form asp-action="Register" method="post" class="needs-validation" novalidate>
        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control custom-input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control custom-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control custom-input" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn custom-btn w-100">Register</button>

        <div class="mt-4 text-center">
            <small>Already have an account? <a asp-action="Login" class="link-bold">Log in here</a></small>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="/js/auth-feedback.js"></script>
}
