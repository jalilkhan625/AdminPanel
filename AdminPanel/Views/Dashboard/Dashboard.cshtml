@{
    ViewData["Title"] = "Dashboard";
}

<!-- Bootstrap CSS & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/css/dashboard.css" rel="stylesheet" />

<div class="d-flex">
    <!-- Sidebar -->
    @Html.Partial("_Sidebar")

    <!-- Main Dashboard Content -->
    <div class="dashboard-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Analytics</h2>
            <div>
                <button class="btn btn-outline-secondary me-2">Full Statistics</button>
                <button class="btn btn-light">Results Summary</button>
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="border rounded p-3 h-100 shadow-sm">
                    <h6>Team Payments</h6>
                    <p class="text-muted mb-1"><i class="bi bi-calendar"></i> 07 Dec approval</p>
                    <div class="d-flex align-items-center mt-3">
                        <div class="d-flex">
                            <img src="https://via.placeholder.com/30" class="rounded-circle me-1" />
                            <img src="https://via.placeholder.com/30" class="rounded-circle me-1" />
                            <img src="https://via.placeholder.com/30" class="rounded-circle me-1" />
                        </div>
                        <span class="ms-2">25+</span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="border rounded p-3 h-100 shadow-sm">
                    <h6>Savings</h6>
                    <h4>$5,839</h4>
                    <small class="text-danger">▼ 11% last week</small>
                </div>
            </div>

            <div class="col-md-3">
                <div class="border rounded p-3 h-100 shadow-sm">
                    <h6>Income statistics</h6>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between small">
                            <span>$0m</span><span>$1m</span><span>$2m</span>
                        </div>
                        <div class="d-flex align-items-end" style="height:100px;">
                            <div class="bg-primary me-2" style="width: 30%; height: 15%;"></div>
                            <div class="bg-secondary me-2" style="width: 30%; height: 50%;"></div>
                            <div class="bg-warning" style="width: 30%; height: 80%;"></div>
                        </div>
                        <div class="d-flex justify-content-between small text-center mt-1">
                            <span>15%</span><span>21%</span><span>32%</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="bg-info text-white p-3 rounded shadow-sm h-100">
                    <h4>$95.9</h4>
                    <small>Per Month</small>
                    <p class="mt-2">Choose Best Plan For You!</p>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-outline-light btn-sm">Details</button>
                        <button class="btn btn-dark btn-sm">Upgrade</button>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="fw-semibold mb-3">Recently Payments</h5>
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="bg-white p-3 rounded shadow-sm d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <img src="https://via.placeholder.com/40" class="rounded-circle me-3" />
                        <div>
                            <strong>Emma Ryan Jr.</strong><br />
                            <small>Mar 9, 2023</small>
                        </div>
                    </div>
                    <div>
                        <strong>$4,823</strong><br />
                        <span class="badge bg-success">Done</span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="bg-white p-3 rounded shadow-sm d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <img src="https://via.placeholder.com/40" class="rounded-circle me-3" />
                        <div>
                            <strong>Justin Weber</strong><br />
                            <small>Mar 2, 2023</small>
                        </div>
                    </div>
                    <div>
                        <strong>$3,937</strong><br />
                        <span class="badge bg-warning text-dark">Pending</span>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="fw-semibold mb-3">Transactions</h5>
        <div class="table-responsive shadow-sm rounded bg-white p-3">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Receiver</th>
                        <th scope="col">Type</th>
                        <th scope="col">Status</th>
                        <th scope="col">Date</th>
                        <th scope="col">Amount</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><img src="https://via.placeholder.com/30" class="rounded-circle me-2" />Emma Ryan Jr.</td>
                        <td>Salary</td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                        <td>Feb 19th, 2023</td>
                        <td>$3,892</td>
                        <td><button class="btn btn-sm btn-outline-primary">Details</button></td>
                    </tr>
                    <tr>
                        <td><img src="https://via.placeholder.com/30" class="rounded-circle me-2" />Adrian Daren</td>
                        <td>Bonus</td>
                        <td><span class="badge bg-success">Done</span></td>
                        <td>Feb 18th, 2023</td>
                        <td>$1,073</td>
                        <td><button class="btn btn-sm btn-outline-primary">Details</button></td>
                    </tr>
                    <tr>
                        <td><img src="https://via.placeholder.com/30" class="rounded-circle me-2" />Roxanne Hills</td>
                        <td>Salary</td>
                        <td><span class="badge bg-success">Done</span></td>
                        <td>Apr 16th, 2023</td>
                        <td>$2,790</td>
                        <td><button class="btn btn-sm btn-outline-primary">Details</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
